{
  "dashboard": {
    "id": null,
    "title": "Logs Explorer",
    "tags": ["logs", "explorer", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(loki_log_entries_total[5m])",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Logs by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(loki_log_entries_total{level=\"error\"}[5m])",
            "legendFormat": "{{job}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Log Level Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (level) (loki_log_entries_total)",
            "legendFormat": "{{level}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Top Error Messages",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (message) (rate(loki_log_entries_total{level=\"error\"}[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 8}
      },
      {
        "id": 5,
        "title": "Recent Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\".*\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 0
            }
          }
        },
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Log Sources by Environment",
        "type": "stat",
        "targets": [
          {
            "expr": "count by (environment) (loki_log_entries_total)",
            "legendFormat": "{{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 28}
      },
      {
        "id": 7,
        "title": "Active Instances",
        "type": "stat",
        "targets": [
          {
            "expr": "count by (instance) (loki_log_entries_total)",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 28}
      },
      {
        "id": 8,
        "title": "Log Retention Status",
        "type": "stat",
        "targets": [
          {
            "expr": "loki_log_retention_days",
            "legendFormat": "Retention Days"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "d"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 28}
      },
      {
        "id": 9,
        "title": "Log Storage Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "(loki_log_storage_bytes / loki_log_storage_capacity_bytes) * 100",
            "legendFormat": "Storage Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 28}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(loki_log_entries_total, job)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "level",
          "type": "query",
          "query": "label_values(loki_log_entries_total, level)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(loki_log_entries_total, environment)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(loki_log_entries_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
} 